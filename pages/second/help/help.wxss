page {
  background-color: #f5f5f5;
  width: 750rpx;
  color: #505050;
}

/* 顶部 */

.img-view {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 320rpx;
  background-color: #fff;
}
.help-img {
  width: 600rpx;
  height: 300rpx;
}

/* 标题 */

.hint {
  width: 690rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  margin: 10rpx 0;
  padding: 0 30rpx;
  background-color: #fff;
}
.hint text{
  font-size: 32rpx;
  margin-left: 10rpx;
}
/* 列表 */

.list-item {
  display: flex;
  flex-direction: column;
  width: 690rpx;
  padding: 0 30rpx;
  background-color: #fff;
}

.up {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
}

.item-title {
  font-size: 28rpx;
}

.item-info {
  font-size: 24rpx;
  color: #858585;
  padding: 10rpx 30rpx 20rpx 30rpx;
}

.hide {
  display: none;
}

.show {
  display: block;
}
