/* pages/second/my_account/my_account.wxss */

page{
  background-color: #f5f5f5;
  width: 750rpx;
}

.up{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 300rpx;
  background-color: #469af8;
  color: #fff;
}


/* 充值按钮 */
.button-view{
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.butt{
  background-color: #469af8;
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  width: 46%;
  height: 100rpx;
}

/* 记录列表 */
.item-list{
  display: flex;
  flex-direction: column;
  width: 670rpx;
  padding: 10rpx 40rpx 160rpx 40rpx;
  background-color: #fff;
}

.hint{
  display: flex;
  align-items: center;
}

.item-list text{
  height: 80rpx;
  font-size: 32rpx;
}

.item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
}

.item view{
  width: 33.3%;
}

.item-name{
  color: #505050;
}

.item-time{
  font-size: 24rpx;
  color: #989898;
  text-align: center;
}

.item-price{
  text-align: right;
}