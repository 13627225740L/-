  color: #929292;
}

/* 底部 */

.bottom {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 2rpx -4rpx 8rpx #a7a6a652;
  z-index: 9;
  font-size: 32rpx;
}

.g-price-text {
  width: 180rpx;
  margin-left: 40rpx;
}

.g-price {
  width: 270rpx;
  font-weight: bold;
  color:#ff5723;
}

.submit {
  width: 260rpx;
  height: 100%;
  background-color: #ff5733;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 底部弹出 */

.dialog_mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
  display: none;
}

.dialog_container {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}

.dialog_show .dialog_container {
  transform: translateY(0);
}

.dialog_show .dialog_mask {
  display: block;
}

