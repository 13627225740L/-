  flex-direction: column;
  background-color: #fff;
  margin-bottom: 110rpx;
}

.up-hint {
  width: 690rpx;
  padding: 0 30rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #505050;
}

.input {
  width: 630rpx;
  border-radius: 14rpx;
  height: 200rpx;
