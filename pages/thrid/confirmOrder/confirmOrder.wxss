  color: #808080;
  border: 2rpx solid #ccc;
  border-radius: 6rpx;
  padding: 10rpx 0;
  margin: 10rpx;
  width: 140rpx;
}

.active {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size:26rpx;
  color: #00baad;
  border: 2rpx solid #00baad;
  border-radius: 6rpx;
  padding: 10rpx 0;
  margin: 10rpx;
  width: 140rpx;
}

