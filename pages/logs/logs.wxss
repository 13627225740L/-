/* 气泡 */
.con {
  width: 750rpx;
  height: 620rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  position: relative;
  top: 60;
  left: 0;
}
.round {
  background-color: #fff;
  width: 750rpx;
  height: 430rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.picker image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.itemone, .itemtwo, .itemthree, .itemforee {
  display: flex;
  width: 200rpx;
  height: 180rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
}
.itemone {
  left: 40rpx;
  top: 6rpx;
}
.itemtwo {
  top: 40rpx;
  right: 30rpx;
}
.itemthree {
  position: absolute;
  bottom: 140rpx;
  left: 0;
}
.itemforee {
  position: absolute;
  bottom: 150rpx;
  right: 10rpx;
}
.item-text, .item-texttwo, .item-textthree, .item-textforee {
  color: #ff5733;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.ani-one {
  animation: one_height 1s infinite;
  animation-direction: alternate;
  animation-duration: 2s;
  animation-timing-function: ease;
}
.ani-two {
  animation: two_height 1s infinite;
  animation-direction: alternate;
  animation-duration: 4s;
  animation-timing-function: ease;
}
.ani-three {
  animation: three_height 1s infinite;
  animation-direction: alternate;
  animation-duration: 3s;
  animation-timing-function: ease;
}
.ani-fore {
  animation: fore_height 1s infinite;
  animation-direction: alternate;
  animation-duration: 3s;
  animation-timing-function: ease;
}
@keyframes one_height {
  0% {
    transform: translate3d(0, 0, 0);
  }
  100% {
    transform: translate3d(0, 20rpx, 0);
  }
}
@keyframes two_height {
  0% {
    transform: translate3d(0, 0, 0);
  }
  100% {
    transform: translate3d(0, 30rpx, 0);
  }
}
@keyframes three_height {
  0% {
    transform: translate3d(0, 0, 0);
  }
  100% {
    transform: translate3d(0, 20rpx, 0);
  }
}
@keyframes fore_height {
  0% {
    transform: translate3d(0, 0, 0);
  }
  100% {
    transform: translate3d(0, 30rpx, 0);
  }
}
.imgshard {
  box-shadow: 0 0 20rpx rgba(247, 192, 42, 0.918);
}
.cn {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(to bottom right, #fce83b, #ffae00);
  box-shadow: 0 0 20rpx rgb(252, 189, 17);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
  animation: cn_size 1s infinite;
  animation-duration: 3s;
  animation-direction: alternate;
  animation-timing-function: ease;
}
@keyframes cn_size {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(1.1);
  }
}
